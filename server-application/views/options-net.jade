doctype html
html(lang='en')
  include ./main_head.jade
  body.skin-blue.sidebar-mini
    .wrapper
      // BEGIN BACK TO TOP
      a#totop(href='#')
        i.fa.fa-angle-up
      // END BACK TO TOP
      // BEGIN TOPBAR
      #header-topbar-option-demo.page-header-topbar
        nav#topbar.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0;', data-step='3')
          .navbar-header
            a#logo.navbar-brand(href='/')
              span.fa.fa-rocket
              span.logo-text Teco System Monitoring
              span.logo-text-icon(style='display: none') µ
          .topbar-main
            a.sidebar-toggle(data-toggle='offcanvas', href='#', role='button')
              i.fa.fa-bars
            a#save(href='#')
              i.fa.fa-save
            ul.nav.navbar.navbar-top-links.navbar-right.mbn
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-bell.fa-fw
                  span.badge.badge-red 3
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-exclamation-triangle.fa-fw
                  span.badge.badge-orange 7
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-flag.fa-fw
                  span.badge.badge-blue 8
              li.dropdown.topbar-user
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  img.img-responsive.img-circle(src='images/avatar/48.jpg', alt='')
                  span.hidden-xs Admin
                  span.caret
                ul.dropdown-menu.dropdown-user.pull-right
                  li
                    a(href='login')
                      i.fa.fa-key
                      | Log Out
      // END TOPBAR
      // BEGIN SIDEBAR MENU
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          ul.sidebar-menu
            li
              a(href='/')
                i.fa.glyphicons.glyphicons-info-sign.fa-fw
                span.menu-title Обзор системы
            li.treeview
              a(href='#')
                i.fa.glyphicons.glyphicons-server.fa-fw
                span.menu-title Модули
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='modules-main')
                    i.fa.glyphicons.glyphicons-server.fa-fw
                    span.menu-title Главный модуль
            li.treeview
              a(href='#')
                i.fa.glyphicons.glyphicons-temperature.fa-fw
                span.menu-title Климатика
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='climats-cond')
                    i.fa.glyphicons.glyphicons-snowflake.fa-fw
                    span.menu-title Кондиционер
                li
                  a(href='climats-pelte')
                    i.fa.glyphicons.glyphicons-none-color-swatch.fa-fw
                    span.menu-title Пельтье
                li
                  a(href='climats-nagrevateli')
                    i.fa.glyphicons.glyphicons-heat.fa-fw
                    span.menu-title Нагреватели
            li
              a(href='system-power')
                i.fa.fa-plug.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Система питания
            li
              a(href='system-logs')
                i.fa.fa-file-text-o.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Логи
            li.treeview.active
              a(href='#')
                i.fa.fa-cog.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Настройки
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li.active
                  a(href='options-net')
                    span.glyphicons.glyphicons-inbox
                    span.menu-title Сеть
                li
                  a(href='options-snmp')
                    span.glyphicons.glyphicons-cluster
                    span.menu-title SNMP
                li
                  a(href='options-modbus')
                    span.glyphicons.glyphicons-tree-structure
                    span.menu-title ModBus
                li
                  a(href='options-time')
                    span.glyphicons.glyphicons-calendar
                    span.menu-title Время
      .content-wrapper
        #page-wrapper
          // BEGIN TITLE & BREADCRUMB PAGE
          #title-breadcrumb-option-demo.page-title-breadcrumb
            .page-header.pull-left
              .page-title
                | Настройки / Сеть
            ol.breadcrumb.page-breadcrumb.pull-right
              li
                i.fa.fa-home
                a(href='dashboard') Главная
                i.fa.fa-angle-right
              li.hidden
                a(href='#') Настройки
                i.fa.fa-angle-right
              li.active Настройки
            .clearfix
          // END TITLE & BREADCRUMB PAGE
          // BEGIN CONTENT
          .page-content
            .row.mbl
              .col-md-5
                .panel.panel-violet
                  .panel-heading
                    | Сеть
                  .panel-body.pan
                    form(action='#')
                      .form-body.pal
                        .row
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#physica_address.form-control(type='text', placeholder='Физический адрес:', data-inputmask="'alias': 'mac'", data-mask='')
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#ipAddress.form-control(type='text', placeholder='IP адрес:', data-inputmask="'alias': 'ip'", data-mask='')
                        .row
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#maskAddress.form-control(type='text', placeholder='Маска подсети', data-inputmask="'alias': 'ip'", data-mask='')
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#gateway.form-control(type='text', placeholder='Шлюз', data-inputmask="'alias': 'ip'", data-mask='')
                        .row
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#DNS1.form-control(type='text', placeholder='DNS1', data-inputmask="'alias': 'ip'", data-mask='')
                        .row
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-keyboard-o
                                input#DNS2.form-control(type='text', placeholder='DNS2', data-inputmask="'alias': 'ip'", data-mask='')
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-font
                                input#httpport.form-control(type='text', placeholder='HTTP-порт')
                          .col-md-12
                            .form-group
                              .input-icon.right
                                i.fa.fa-font
                                input#httphost.form-control(type='text', placeholder='Имя хоста')
        script.
          $("[data-mask]").inputmask();
