doctype html
html(lang='en')
  include ./main_head.jade

  body.skin-blue.sidebar-mini
    .wrapper
      // BEGIN BACK TO TOP
      a#totop(href='#')
        i.fa.fa-angle-up
      // END BACK TO TOP
      // BEGIN TOPBAR
      #header-topbar-option-demo.page-header-topbar
        nav#topbar.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0;', data-step='3')
          .navbar-header
            a#logo.navbar-brand(href='/')
              span.fa.fa-rocket
              span.logo-text Teco System Monitoring
              span.logo-text-icon(style='display: none') µ
          .topbar-main
            a.sidebar-toggle(data-toggle='offcanvas', href='#', role='button')
              i.fa.fa-bars
            a#save(href='#')
              i.fa.fa-save
            ul.nav.navbar.navbar-top-links.navbar-right.mbn
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-bell.fa-fw
                  span.badge.badge-red 3
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-exclamation-triangle.fa-fw
                  span.badge.badge-orange 7
              li.dropdown
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  i.fa.fa-flag.fa-fw
                  span.badge.badge-blue 8
              li.dropdown.topbar-user
                a.dropdown-toggle(data-hover='dropdown', href='#')
                  img.img-responsive.img-circle(src='images/avatar/48.jpg', alt='')
                  span.hidden-xs Admin
                  span.caret
                ul.dropdown-menu.dropdown-user.pull-right
                  li
                    a(href='login')
                      i.fa.fa-key
                      | Log Out
      // END TOPBAR
      // BEGIN SIDEBAR MENU
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          ul.sidebar-menu
            li.active
              a(href='/')
                i.fa.glyphicons.glyphicons-info-sign.fa-fw
                span.menu-title Обзор системы
            li.treeview
              a(href='#')
                i.fa.glyphicons.glyphicons-server.fa-fw
                span.menu-title Модули
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='modules-main')
                    i.fa.glyphicons.glyphicons-server.fa-fw
                    span.menu-title Главный модуль
            li.treeview
              a(href='#')
                i.fa.glyphicons.glyphicons-temperature.fa-fw
                span.menu-title Климатика
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='climats-cond')
                    i.fa.glyphicons.glyphicons-snowflake.fa-fw
                    span.menu-title Кондиционер
                li
                  a(href='climats-pelte')
                    i.fa.glyphicons.glyphicons-none-color-swatch.fa-fw
                    span.menu-title Пельтье
                li
                  a(href='climats-nagrevateli')
                    i.fa.glyphicons.glyphicons-heat.fa-fw
                    span.menu-title Нагреватели
            li
              a(href='system-power')
                i.fa.fa-plug.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Система питания
            li
              a(href='system-logs')
                i.fa.fa-file-text-o.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Логи
            li.treeview
              a(href='#')
                i.fa.fa-cog.fa-fw
                  .icon-bg.bg-orange
                span.menu-title Настройки
                i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a(href='options-net')
                    span.glyphicons.glyphicons-inbox
                    span.menu-title Сеть
                li
                  a(href='options-snmp')
                    span.glyphicons.glyphicons-cluster
                    span.menu-title SNMP
                li
                  a(href='options-modbus')
                    span.glyphicons.glyphicons-tree-structure
                    span.menu-title ModBus
                li
                  a(href='options-time')
                    span.glyphicons.glyphicons-calendar
                    span.menu-title Время
      .content-wrapper
        #page-wrapper
          // BEGIN TITLE & BREADCRUMB PAGE
          #title-breadcrumb-option-demo.page-title-breadcrumb
            .page-header.pull-left
              .page-title
                | Обзор системы
            ol.breadcrumb.page-breadcrumb.pull-right
              li
                i.fa.fa-home
                a(href='dashboard') Главная
                i.fa.fa-angle-right
              li.hidden
                a(href='#') Обзор системы
                i.fa.fa-angle-right
              li.active Обзор системы
            .clearfix
          // END TITLE & BREADCRUMB PAGE
          // BEGIN CONTENT
          .page-content
            .row.mbl
              .col-md-12
                .panel.panel-violet
                  .panel-heading Текущий лог системы
                  .panel-body
                    table#currentSystemLog.table.table-hover.table-striped
                      thead
                        tr
                          th Дата и время
                          th Источник
                          th Строгость
                          th Событие
                      tbody
                        tr
                          td 20.05.2016 16:12
                          td Модули/Главный модуль
                          td
                            span.label.label-sm.label-success Major
                          td Превышение min значения: Dt1
            .row.mbl
              .col-md-8
                .panel.panel-green
                  .panel-heading Информация о системе:
                  .panel-body
                    table#systemInfo.table.table-hover.table-striped
                      thead
                      tbody
                        tr
                          td Дата/время 
                          td 21.05.2016